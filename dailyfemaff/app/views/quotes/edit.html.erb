<div class="newandupdate">

  <h1>Make changes to the quote:</h1>

  <%= form_for @quote, method: :put, url: "/admin/quotes/#{@new_item.id}" do |f| %>
    <strong><%= f.label :quote, "Quote text:" %></strong><br><br>
    <%= f.text_area :quote, placeholder: "(Maximum of 550 characters.)", required: true, autofocus: true, maxlength: 550, style: "width:100%; height:125px", value: "#{@new_item.quote}"%><br><br>
    <strong><%= f.label :person_id, "Speaker:" %></strong><br><br>
    (Note: If the speaker is not listed below, you need to <a href="/admin/people/new">create a person entry</a> for the speaker, first.)<br><br>
    <%= f.select :person_id, options_for_select(@person_names_ids.collect {|object| [(object.person), (object.id)] }) %><br><br>
    <%= f.hidden_field :id, value: @new_item.id %>
    <%= f.submit "UPDATE QUOTE", style: "width:150px", class: "navbutton" %>
  <% end %>
</div>

