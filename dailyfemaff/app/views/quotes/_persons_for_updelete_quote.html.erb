
<form action="<%= @form_action %>" method="post">
  <label><strong>Quotes:</strong></label><br><br>
  Click the text that matches the beginning of the quote from <em><%= @person %></em> that you want to <%= @action %>.<br><br>
  
  <select name="id">
    <% @quote_array.each do |object| %>
      <option value="<%= "#{object.id}" %>"><%= "#{object.quote.byteslice(0...30)}" %></option>
      <% end %>
  </select>
  <br><br>
  <input name="authenticity_token" type="hidden" value="<%= session["_csrf_token"] %>" />  
  <input type="submit" class="navbutton" style="width:135px" value="CHOOSE QUOTE">
</form>