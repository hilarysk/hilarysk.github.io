      <% Term.select("id, term").each do |object| %>
        <option value="<%= object.id %>">
          <%= object.term %>
        </option>
      <% end %>
    </select>
    <br><br>
    <input type="hidden" name="class" value="Term">
    <input type="submit" value="CHOOSE TERM" class="navbutton" style="width:105px">
  </form> 

<% elsif @item_class == "Excerpt" %>
  <form action="<%= "#{@path}" %>">
    <select name="item_id">
      <% Excerpt.select("id, excerpt").all.each do |object| %>
        <option value="<%= object.id %>">
          <%= "#{object.excerpt.byteslice(0...50)}" %> ...
        </option>
      <% end %>
    </select>
    <br><br>
    <input type="hidden" name="class" value="Excerpt">
    <input type="submit" value="CHOOSE EXCERPT" class="navbutton" style="width:135px">
  </form> 
<% end %>